@page
@model Projeto_escola.Pages.DisciplinasModel
@{
}
<!doctype html>
<html lang="pt-br">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Disciplinas - Academic Manager</title>
    <base href="~/" />

    <link rel="stylesheet" href="~/css/Disciplinas.css" asp-append-version="true" />
</head>
<body>
    <header class="site-header">
        <div class="container">
            <h1 class="brand">Academic Manager</h1>
            <nav class="main-nav">
                <a asp-page="/Dashboard">Início</a>
                <a asp-page="/Professores">Professores</a>
                <a asp-page="/Matriculas">Matrículas</a>
                <a asp-page="/Login">Sair</a>
            </nav>
        </div>
    </header>

    <main class="container">
        <div class="header-actions">
            <h2>Disciplinas</h2>
            <a class="btn primary" asp-page="/Disciplinacreate">Nova disciplina</a>
        </div>

        <div class="card">
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nome</th>
                        <th>Carga Horária</th>
                        <th>Professor</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var d in Model.Disciplinas)
                    {
                        <tr>
                            <td>@d.Id</td>
                            <td>@d.Nome</td>
                            <td>@d.CargaHoraria</td>
                            <td>@d.Professor</td>
                            <td>
                                <a asp-page="/Disciplinacreate" asp-route-id="@d.Id">Editar</a> |
                                <form method="post" asp-page-handler="Delete" asp-route-id="@d.Id" style="display:inline;">
                                    <button type="submit" class="btn danger btn-sm">Excluir</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </main>

    <footer class="site-footer">
        <div class="container">© 2025 • Academic Manager</div>
    </footer>
</body>
</html>

@page
@model Projeto_escola.Pages.PaginaLoginModel
@{
    ViewData["Title"] = "Login";
}
<link rel="stylesheet" href="~/css/login.css" />

<div class="login-container">
    <div class="login-card">
        <div class="brand">Projeto Escola</div>
        <div class="title">Acesse sua conta</div>

        <form method="post">
            <div class="form-group">
                <input type="text" id="Usuario" name="Usuario" placeholder="Usuário" required />
            </div>

            <div class="form-group">
                <input type="password" id="Senha" name="Senha" placeholder="Senha" required />
            </div>

            <button type="submit" class="btn primary">Entrar</button>
        </form>

        <a asp-page="/Registroprof" class="btn primary">Registrar</a>

        @if (!string.IsNullOrEmpty(ViewData["MensagemErro"] as string))
        {
            <div style="margin-top: 15px; color: red;">
                @ViewData["MensagemErro"]
            </div>
        }
    </div>
</div>

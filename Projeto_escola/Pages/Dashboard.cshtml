@page
@model Projeto_escola.Pages.DashboardModel

@{
    ViewData["Title"] = "Painel do Professor";
}
<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Projeto Escola</title>
    <link rel="stylesheet" href="~/css/Dashboard.css" asp-append-version="true">

</head>
<body>
    <div class="container">
        <!-- MENU LATERAL -->
        <aside class="sidebar">
            <h2>Projeto Escola</h2>
            <nav>
                <ul>
                    <li><a href="#">🏠 Início</a></li>
                    <a asp-page="/Professores">👨‍🏫 Professores</a>
                    <a asp-page="/Alunos">👩‍🎓 Alunos</a>
                    <a asp-page="/Disciplinas">📚 Disciplinas</a>
                    <a asp-page="/Matriculas">🧾 Matrículas</a>
                    <a asp-page="/Login" class="logout">🚪 Sair</a>
                </ul>
            </nav>
        </aside>

        <!-- CONTEÚDO PRINCIPAL -->
        <main class="main-content">
            <header>
                <h1>Dashboard</h1>
                <p>Bem-vindo, <strong>Administrador</strong></p>
            </header>

            <!-- CARDS DE INFORMAÇÕES -->
            <div class="card">
                <h3>Professores</h3>
                <p>@Model.TotalProfessores cadastrados</p>
            </div>
            <div class="card">
                <h3>Alunos</h3>
                <p>@Model.TotalAlunos matriculados</p>
            </div>
            <div class="card">
                <h3>Disciplinas</h3>
                <p>@Model.TotalDisciplinas ativas</p>
            </div>
        </main>
    </div>
</body>
</html>

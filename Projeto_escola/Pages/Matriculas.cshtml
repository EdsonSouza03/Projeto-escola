@page
@model Projeto_escola.Pages.MatriculasModel
@{
}
<!doctype html>
<html lang="pt-br">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Matrículas - Academic Manager</title>
    <link rel="stylesheet" href="~/css/Matriculas.css" asp-append-version="true" />
</head>

<body>
    <!-- Cabeçalho -->
    <header class="site-header">
        <div class="container">
            <h1 class="brand">Academic Manager</h1>
            <nav class="main-nav">
                <a asp-page="/Inicial">Início</a>
                <a asp-page="/Dashboard">Dashboard</a>
                <a asp-page="/Disciplinas">Disciplinas</a>
                <a asp-page="/Professores">Professores</a>
                <a asp-page="/Alunos">Alunos</a>
                <a asp-page="/Matriculas">Matrículas</a>
                <a asp-page="/Login">Sair</a>
            </nav>
        </div>
    </header>

    <!-- Conteúdo -->
    <main class="container">
        <div class="header-actions">
            <h2>Gerenciar Matrículas</h2>
            <a class="btn primary" asp-page="/MatriculasCreate">Nova Matrícula</a>
        </div>

        <div class="card">
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Aluno</th>
                        <th>Disciplina</th>
                        <th>Data</th>
                        <th>Status</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var m in Model.Matriculas)
                    {
                        <tr>
                            <td>@m.Id</td>
                            <td>@m.AlunoNome</td>
                            <td>@m.DisciplinaNome</td>
                            <td>@m.DataMatricula.ToShortDateString()</td>
                            <td>@m.Status</td>
                            <td>
                                <a asp-page="/MatriculasCreate" asp-route-id="@m.Id">Editar</a> |
                                <form method="post" asp-page-handler="Delete" asp-route-id="@m.Id" style="display:inline;">
                                    <button type="submit" class="link danger" onclick="return confirm('Excluir matrícula?')">Excluir</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </main>

    <!-- Rodapé -->
    <footer class="site-footer">
        <div class="container">© 2025 • Academic Manager</div>
    </footer>
</body>
</html>

@page
@model Projeto_escola.Pages.ProfessoresModel

<!doctype html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Professores - Academic Manager</title>

    <!-- Define o caminho base para os arquivos estáticos -->
    <base href="~/" />

    <!-- Garante que o CSS carregue e ignore cache -->
    <link rel="stylesheet" href="~/css/Professores.css" asp-append-version="true" />
</head>
<body>
    <!-- Cabeçalho -->
    <header class="site-header">
        <div class="container">
            <h1 class="brand">Academic Manager</h1>
            <nav class="main-nav">
                <a asp-page="/Dashboard">Início</a>
                <a asp-page="/Disciplinas">Disciplinas</a>
                <a asp-page="/Matriculas">Matrículas</a>
                <a asp-page="/Login">Sair</a>
            </nav>
        </div>
    </header>

    <!-- Conteúdo -->
    <main class="container">
        <div class="header-actions">
            <h2>Professores</h2>
        </div>

        <div class="card">
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nome</th>
                        <th>Especialidade</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Professores.Count == 0)
                    {
                        <tr><td colspan="3">Nenhum professor cadastrado.</td></tr>
                    }
                    else
                    {
                        @foreach (var professor in Model.Professores)
                        {
                            <tr>
                                <td>@professor.Id</td>
                                <td>@professor.Nome</td>
                                <td>@professor.Especialidade</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </main>

    <!-- Rodapé -->
    <footer class="site-footer">
        <div class="container">© 2025 • Academic Manager</div>
    </footer>
</body>
</html>

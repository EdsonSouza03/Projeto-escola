@page
@model Projeto_escola.Pages.AlunosModel
@{
    ViewData["Title"] = "Alunos";
}

<!doctype html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Alunos - Academic Manager</title>

    <!-- Caminho base para o Razor -->
    <base href="~/" />

    <!-- CSS com cache busting -->
    <link rel="stylesheet" href="~/css/Alunos.css" asp-append-version="true" />
</head>
<body>
    <!-- Cabeçalho -->
    <header class="site-header">
        <div class="container">
            <h1 class="brand">Academic Manager</h1>
            <nav class="main-nav">
                <a asp-page="/Dashboard">Início</a>
                <a asp-page="/Disciplinas">Disciplinas</a>
                <a asp-page="/Professores">Professores</a>
                <a asp-page="/Matriculas">Matrículas</a>
                <a asp-page="/Login">Sair</a>
            </nav>
        </div>
    </header>

    <!-- Conteúdo principal -->
    <main class="container">
        <div class="header-actions">
            <h2>Alunos</h2>
            <a class="btn primary" asp-page="/AlunosCreate">Novo Aluno</a>
        </div>

        <div class="card">
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nome</th>
                        <th>RA</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.ListaAlunos == null || !Model.ListaAlunos.Any())
                    {
                        <tr><td colspan="4">Nenhum aluno cadastrado.</td></tr>
                    }
                    else
                    {
                        @foreach (var aluno in Model.ListaAlunos)
                        {
                            <tr>
                                <td>@aluno.Id</td>
                                <td>@aluno.Nome</td>
                                <td>@aluno.RA</td>
                                <td>
                                    <a asp-page="/AlunosCreate" asp-route-id="@aluno.Id">Editar</a> |
                                    <form method="post" asp-page-handler="Delete" asp-route-id="@aluno.Id" style="display:inline;">
                                        <button type="submit" class="link danger" onclick="return confirm('Excluir este aluno?')">Excluir</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </main>

    <!-- Rodapé -->
    <footer class="site-footer">
        <div class="container">© 2025 • Academic Manager</div>
    </footer>
</body>
</html>
